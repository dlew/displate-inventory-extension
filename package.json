    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "3.3.2",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.16.0",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4"
  }
}
